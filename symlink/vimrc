set nocompatible
set encoding=utf-8

" load vundle
filetype off
set rtp+=~/.vim/bundle/Vundle.vim

call vundle#begin()

" vundle plugins
Plugin 'gmarik/Vundle.vim'

call vundle#end()

" allow usage of mouse
if has("mouse")
  set mouse=a
endif

" tab completion
set wildmode=longest,list
set wildmenu

" display tabs and trailing whitespace
set listchars=trail:·,tab:→→
set list

" expand tabs to spaces
set expandtab
set tabstop=2
set softtabstop=2

" use two spaces for indentation
set shiftwidth=2

" case insensitive search
set ignorecase
set smartcase

" incremental search with term highlighting
set incsearch
set hlsearch

" enable autoindent
set autoindent
set smartindent

" enable syntax highlighting and show line numbers
syntax enable
set number

" mark overlong columns (80 chars)
highlight OverLength ctermbg=red ctermfg=white guibg=#660000
match OverLength /\%81v.\+/

" show more information command bar
set showcmd
set ruler

" filetypes
filetype plugin indent on

" mappings

" unmap arrow keys
" noremap <Up> <nop>
" noremap <Down> <nop>
" noremap <Left> <nop>
" noremap <Right> <nop>

" spell checking
map <F4> :set spell!<CR><Bar>:echo "Spell Check: " . strpart("OffOn", 3 * &spell, 3)<CR>

" toggle :set paste / :set nopaste
set pastetoggle=<F10>
