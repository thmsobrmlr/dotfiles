alias ll='ls -alGh'
alias ls='ls -Gh'

alias tree='tree -C'

# extended move e.g. "mmv **/*2014.log **/*2015.log"
alias mmv='noglob zmv -W'

alias gs='git status --short'
alias gst='git status'
alias gco='git checkout'
alias gm='git checkout $(git main-branch)'
alias ga='git add .'
alias gp='git push'
alias gl='git pull --rebase'
alias gc='git commit'
alias gcf='git commit --no-verify'
alias gcm='git commit --no-verify --no-edit'
alias gd='git diff'
alias gds='git diff --staged'


alias be='bundle exec'
